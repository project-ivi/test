mixin header
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width')
  | !{ livereloadScript }
  
  link(rel='icon', type='image/png', href=contents.images['favicon-32x32.png'].url)
  title
